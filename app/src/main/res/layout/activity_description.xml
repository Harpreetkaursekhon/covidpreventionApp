<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/img_des"
      android:layout_width="match_parent"
      android:layout_height="350dp"

      ></ImageView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/img_des">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/textdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#Flattenthecurvehack"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/appcolor"
        android:gravity="center"
        android:textStyle="italic"/>
            <TextView
                android:id="@+id/textdes_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Vission"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

        <TextView
        android:id="@+id/textdes_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vission"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textdes_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Mission"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textdes_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contri"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
</LinearLayout>
    </ScrollView>

</LinearLayout>
    <Button
        android:id="@+id/button_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:background="@drawable/btn_style"
        android:text="Let's Start Here"
        android:textColor="#ffff"
        android:layout_margin="20dp"
        android:orientation="vertical"></Button>


</RelativeLayout>
